<h1>BaseApis#index</h1>
<p>Find me in app/views/base_apis/index.html.erb</p>

<%# https://railsdoc.com/page/form_with %>
<%= form_with url: "/stations/search", method: :post do |form| %>
    <div>
        <%= form.label :title, "乗車バス停名:" %>
        <%= form.text_field :get_on %>
    </div>
    <div>
        <%= form.label :title, "降車バス停名:" %>
        <%= form.text_field :get_off %>
    </div>
    <%= form.submit "検索" %>
<% end %>

<%= turbo_frame_tag "result" do %>
    <div>置換したい箇所</div>
    <div>検索結果を3件表示</div>
<% end %>
